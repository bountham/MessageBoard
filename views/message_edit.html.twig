<html>
<head>
  <title>User messages</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/css/main.css">
</head>
<body>

  <header><h1><span class="glyphicon glyphicon-send"></span>MessageBoard</h1></header>

  <div class="container">
    <div class="row">

      <div class="col-md-3">

        <h3>EDIT MESSAGE:</h3>

      </div>

      <div class="col-md-8">

        <h4><em>{{ message.getMessage }}</em></h4>

      </div>
    </div>
    <div class="post row">
      <div class="post-element col-md-3">
        <a href="/messages" class='btn btn-default btn-lg'><b>Back to board</b></a>
      </div>

      <div class="post-element col-md-7">
        <form action="/messages/{{ message.getMessageId }}" method="post">

          <div class="form-group">
            <input name="_method" type="hidden" value="patch">

            <label for="message">Edit your message:</label><br>
            <textarea rows="4" class='textarea_edit' name='message'>{{message.getMessage}}</textarea>

          </div>
      </div>

          <div class="col-md-1">
            <button type="submit" class='btn btn-success'>Update</button>
          </div>

        </form>


    </div>
  </div>

  </body>
  </html>
